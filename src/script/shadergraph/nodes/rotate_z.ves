import "blueprint.node" for Node
import "shadergraph.node_function" for NodeFunction

var CODE = "
vec3 rotate_z(vec3 pos, float theta) 
{
    float c = cos(theta);
    float s = sin(theta);
    return mat3(
        vec3(c, -s, 0),
        vec3(s, c, 0),
        vec3(0, 0, 1)
    ) * pos;
}
"

class RotateZ is Node
{
	init() 
	{
		super.init(RotateZ.name)

		this.node_func = NodeFunction(this, CODE, "rotate_z", [
			["theta", 0.0],
		])
	}
}