import "blueprint.node" for Node
import "blueprint.node_function" for NodeFunction

var CODE = "
vec3 rotate_x(vec3 pos, float theta) 
{
    float c = cos(theta);
    float s = sin(theta);
    return mat3(
        vec3(1, 0, 0),
        vec3(0, c, -s),
        vec3(0, s, c)
    ) * pos;
}
"

class RotateX is Node
{
	init() 
	{
		super.init(RotateX.name)

		this.node_func = NodeFunction(this, CODE, "rotate_x", [
			["theta", 0.0],
		])
	}
}