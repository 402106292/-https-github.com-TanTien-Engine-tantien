import "blueprint.node" for Node
import "blueprint.pin" for Pin
import "blueprint.variant" for VAR_TYPE_NUMBER3
import "blueprint.blueprint" for Blueprint

class Reflect is Node
{
	init()
	{
		super.init(Reflect.name)

		this.imports = [
			Pin(this, "I", VAR_TYPE_NUMBER3),
			Pin(this, "N", VAR_TYPE_NUMBER3)
		]
		this.exports = [
			Pin(this, "R", VAR_TYPE_NUMBER3)
		]

		this.layout()
	}

	calc_inst(idx, ctx) 
	{
		var I = Blueprint.calc_input_inst(this, 0, ctx)
		var N = Blueprint.calc_input_inst(this, 1, ctx)
		if (I and N) {
			return ctx.bb.reflect(I, N)		
		} else {
			return nil
		}
	}
}