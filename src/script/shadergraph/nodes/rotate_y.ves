import "blueprint.node" for Node
import "shadergraph.node_function" for NodeFunction

var CODE = "
vec3 rotate_y(vec3 pos, float theta) 
{
    float c = cos(theta);
    float s = sin(theta);
    return mat3(
        vec3(c, 0, s),
        vec3(0, 1, 0),
        vec3(-s, 0, c)
    ) * pos;
}
"

class RotateY is Node
{
	init() 
	{
		super.init(RotateY.name)

		this.node_func = NodeFunction(this, CODE, "rotate_y", [
			["theta", 0.0],
		])
	}
}