import "blueprint.nodes.add" for Add as bp_Add
import "shadergraph.node_helper" for NodeHelper

class Add is bp_Add
{
	init()
	{
		super.init()	
	}

	calc_inst(gen, idx, module, func) 
	{
		var a = NodeHelper.calc_input_inst(gen, this, 0, module, func)
		var b = NodeHelper.calc_input_inst(gen, this, 1, module, func)
		
		if (!a and !b) {
			return nil
		} else if (!a) {
			return b
		} else if (!b) {
			return a
		} else {
			return gen.add(func, a, b)
		}
	}
}