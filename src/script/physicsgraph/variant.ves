
var VAR_TYPE_WORLD   = "world"
var VAR_TYPE_BODY    = "body"
var VAR_TYPE_JOINT   = "joint"
var VAR_TYPE_FIXTURE = "fixture"

class VarWorld
{
	init()
	{
		this.world = nil
		this.bodies = []
		this.joints = []		
	}
}

class VarBody
{
	init()
	{
		this.body = nil

		this.geo = nil
		this.spr = nil

		this.scale = [1, 1]
	}
}

class VarJoint
{
	init()
	{
		this.joint = nil
	}
}

class VarFixture
{
	init()
	{
		this.shape = nil

		// filter
		this.category = nil
		this.not_collide = nil
	}
}