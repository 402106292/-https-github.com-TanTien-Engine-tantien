import "render" for Render
import "blueprint.node" for Node
import "blueprint.pin" for Pin

class Draw is Node
{
	init()
	{
		super.init(Draw.name)

		this.imports = [
			Pin(this, "prev", "port")
		]
		this.exports = [
			Pin(this, "next", "port")
		]
		this.layout()

		this.prim_type = "triangles"

		this.prog = 0
		this.va = 0

		this.render_state = {}
	}

	execute() {
		Render.draw(this.prim_type, this.prog, this.va, this.render_state)
	}
}