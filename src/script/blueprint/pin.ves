import "blueprint.node_style" for COL_PIN_DEFAULT

class Pin
{
	init(node, name, type) 
	{
		this.node = node
		this.name = name
		this.type = type
		this.conns = Set.new()

		// for calc pos
		this.is_input = false
		this.slot_idx = 0

		this.stop_port_pass = false

		this.color = COL_PIN_DEFAULT
		this.hide = false
	}
}