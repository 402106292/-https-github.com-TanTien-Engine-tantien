import "blueprint.node" for Node as bp_Node
import "blueprint.blueprint" for Blueprint

class Node is bp_Node
{
	init(name)
	{
		super.init(name)

		this.dirty = true
	}
	
	make_dirty()
	{
		this.dirty = true

		var nodes = Blueprint.get_successor_nodes(this)
		for (var node in nodes) {
			node.dirty = true
		}
	}
}