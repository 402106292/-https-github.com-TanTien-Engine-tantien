class Scene
{
	init() {
		this.nodes = []
		this.selection = Set.new()

		this.bp_dirty = false
	}

	add(node) {
		this.nodes.add(node)
	}

	delete(node) 
	{
		for (var i in 0..this.nodes.count) {
			if (this.nodes[i] == node) {
				this.nodes.removeAt(i)
				return
			}
		}
	}

	clear()
	{
		this.nodes.clear()
		this.selection.clear()
	}

	update()
	{
		for (var node in this.nodes) {
			node.update()
		}	
	}

	draw() 
	{
		for (var node in this.nodes) {
			node.draw()
		}
	}
}