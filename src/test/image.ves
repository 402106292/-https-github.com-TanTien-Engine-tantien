import "image" for ImageData
import "graphics" for Texture, Graphics

class Test
{
	load()
	{
		var img = ImageData.init("assets/textures/awesomeface.png")
		//img.toRGB565()
		//img.storeToFile("assets/textures/test.bmp")

		var dst_size = 512
		var dst_img = ImageData.init(dst_size, dst_size, "rgba")

		var w = img.getWidth()
		var h = img.getHeight()
		var sub_img = img.cropping(w * 0.5, h * 0.5, 100, 200)

		dst_img.copyFrom(sub_img, dst_size/2, dst_size/2, true)

		this.tex = Texture.init(dst_img)
	}

	update()
	{
	}

	draw()
	{
		Graphics.drawTexture(this.tex, 0, 0, 1)

		Graphics.flush()
	}

	sizechanged(w, h)
	{
		Graphics.onSize(w, h)
	}

	keypressed(c) {}
	keyreleased(c) {}
	mousemoved(x, y, btn) {}
	mousedragged(x, y, btn) {}
	mousepressed(x, y, btn) {}
	mousereleased(x, y, btn) {}
	mousescrolled(x, y, dx, dy) {}
}